" SECTION: base
syntax on
filetype plugin indent on

" SECTION: numbering
set number relativenumber 

" SECTION: indentation
set autoindent expandtab smartindent shiftwidth=2 softtabstop=2 tabstop=2

" SECTION: wrapping
set nowrap

" SECTION: search
set incsearch 
set nohlsearch

" SECTION: color column
set colorcolumn=90

" SECTION: colorscheme
colorscheme slate
